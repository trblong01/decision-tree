{
    "name": "Decision-Rule-Tree",
    "version": "1.0.0",
    "description": "Decision-Rule-Tree",
    "author": "longtb",
    "nodemonConfig": {
        "events": {
            "restart": "ts-node copyStaticAssets.ts"
        }
    },
    "scripts": {
        "build-ts": "tsc",
        "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" ",
        "serve-debug": "nodemon -e ts,js,png,jpg,ttf,woff,woff2,otf,eot,svg --watch src --inspect dist/server.js",
        "serve": "node dist/server.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose",
        "copy-static-code": "cp -r src/public/js dist/public/ && cp -r src/public/css dist/public/",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/server.js",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\""
    },
    "dependencies": {
        "@types/cors": "^2.8.12",
        "async": "3.2.0",
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "cors": "^2.8.5",
        "d3": "^4.10.0",
        "dotenv": "8.2.0",
        "ejs": "^3.1.6",
        "errorhandler": "1.5.1",
        "express": "4.17.1",
        "express-flash": "0.0.2",
        "express-session": "1.17.1",
        "express-validator": "6.9.2",
        "lodash": "^4.17.21",
        "react-scripts": "^4.0.0"
    },
    "devDependencies": {
        "@types/async": "3.2.5",
        "@types/body-parser": "1.19.0",
        "@types/compression": "1.7.0",
        "@types/concurrently": "5.2.1",
        "@types/ejs": "^3.1.0",
        "@types/errorhandler": "1.5.0",
        "@types/eslint": "7.2.6",
        "@types/express": "4.17.11",
        "@types/express-flash": "0.0.2",
        "@types/express-session": "1.17.3",
        "@types/jest": "^26.0.23",
        "@types/jquery": "3.5.5",
        "@types/lodash": "^4.14.170",
        "@types/node": "^16.0.0",
        "@types/pug": "2.0.4",
        "@types/react": "17.0.0",
        "@types/react-dom": "17.0.0",
        "@types/request": "2.48.5",
        "@types/request-promise": "4.1.47",
        "@types/shelljs": "0.8.8",
        "@types/superagent": "4.1.15",
        "@types/supertest": "^2.0.11",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "4.14.2",
        "@typescript-eslint/parser": "4.14.2",
        "babel-preset-es2015": "^6.9.0",
        "concurrently": "6.0.2",
        "eslint": "7.19.0",
        "gulp": "^3.9.1",
        "gulp-babel": "^6.1.2",
        "gulp-concat": "^2.6.0",
        "gulp-concat-css": "^2.3.0",
        "gulp-cssnano": "^2.1.2",
        "gulp-rename": "^1.2.2",
        "gulp-uglify": "^1.5.4",
        "jest": "^27.0.3",
        "nodemon": "^2.0.7",
        "sass": "1.32.6",
        "shelljs": "0.8.4",
        "supertest": "6.2.2",
        "ts-node": "9.1.1",
        "typescript": "4.1.3"
    }
}
